	// Проверяем, сколько позиций заменено
	КоличествоСтарых = СтараяНоменклатура.Количество();
	КоличествоЗамененных = 0;
	
	Для Каждого СтараяПозиция Из СтараяНоменклатура Цикл
		
		// Проверяем, есть ли соответствие в регистре
		Запрос = Новый Запрос;
		Запрос.Текст = 
			"ВЫБРАТЬ
			|	MRS_СоответствиеСтаройНовойНоменклатуры.НоваяНоменклатура КАК НоваяНоменклатура
			|ИЗ
			|	РегистрСведений.MRS_СоответствиеСтаройНовойНоменклатуры КАК MRS_СоответствиеСтаройНовойНоменклатуры
			|ГДЕ
			|	MRS_СоответствиеСтаройНовойНоменклатуры.ВскрытаяНоменклатура = &ВскрытаяНоменклатура";
		
		Запрос.УстановитьПараметр("ВскрытаяНоменклатура", СтараяПозиция.Значение);
		
		РезультатЗапроса = Запрос.Выполнить().Выбрать();
		Если РезультатЗапроса.Следующий() И ЗначениеЗаполнено(РезультатЗапроса.НоваяНоменклатура) Тогда
			КоличествоЗамененных = КоличествоЗамененных + 1;
		КонецЕсли;
		
	КонецЦикла;
	
	// Определяем статус
	Если КоличествоЗамененных = 0 Тогда
		Возврат "Не заменена";
	ИначеЕсли КоличествоЗамененных = КоличествоСтарых Тогда
		Возврат "Полностью заменена";
	Иначе
		Возврат "Частично заменена";
	КонецЕсли;
	
