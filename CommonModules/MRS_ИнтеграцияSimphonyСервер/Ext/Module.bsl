	CorrelationId = Строка(Новый УникальныйИдентификатор);
	
	Попытка
		
		// Шаг 1: Получить марки из Simphony
		МаркиSimphony = ПолучитьМаркиЕГАИСИзSimphony(ObjNum, RvcId, CorrelationId);
		
		// Шаг 2: Получить марки из 1С
		ДанныеПозиции = ПолучитьДанныеПозицииЕГАИС(Позиция);
		Марки1С = ПолучитьМаркиЕГАИСИз1С(ДанныеПозиции.Номенклатура, ДанныеПозиции.Характеристика);
		
		// Шаг 3: Вычислить расхождения
		Расхождения = ВычислитьРазницуМарокЕГАИС(МаркиSimphony, Марки1С);
		
		КоличествоДобавлено = 0;
		КоличествоУдалено = 0;
		Ошибки = Новый Массив;
		
		// Шаг 4: Удаление устаревших марок
		Для Каждого Марка Из Расхождения.НаУдаление Цикл
			
			Endpoint = СтрШаблон("/rvc/%1/egais/marks/%2", RvcId, Марка.code);
			Заголовки = СформироватьЗаголовки(ИмяПользователя(), CorrelationId);
			
			HTTPОтвет = ОтправитьЗапросAPI("DELETE", Endpoint, "", Заголовки);
			
			Если HTTPОтвет.КодСостояния = 200 Или HTTPОтвет.КодСостояния = 404 Тогда
				// 404 означает, что марка уже удалена - считаем успехом
				КоличествоУдалено = КоличествоУдалено + 1;
			Иначе
				ТекстОшибки = СтрШаблон("Не удалось удалить марку %1: HTTP %2", Марка.code, HTTPОтвет.КодСостояния);
