			КонецЕсли;
			
		КонецЦикла;
		
		// Шаг 5: Добавление новых марок (пакетом)
		Если Расхождения.НаДобавление.Количество() > 0 Тогда
			
			// Формирование JSON для batch добавления
			МассивДобавления = Новый Массив;
			Для Каждого Марка Из Расхождения.НаДобавление Цикл
				ЭлементJSON = Новый Структура;
				ЭлементJSON.Вставить("objnum", ObjNum);
				ЭлементJSON.Вставить("code", Марка.code);
				
				// Опциональные поля
				Если ЗначениеЗаполнено(Марка.ean) Тогда
					ЭлементJSON.Вставить("ean", Марка.ean);
				КонецЕсли;
				
				Если ЗначениеЗаполнено(Марка.store) Тогда
					ЭлементJSON.Вставить("store", Марка.store);
				КонецЕсли;
				
				МассивДобавления.Добавить(ЭлементJSON);
			КонецЦикла;
			
			ЗаписьJSON = Новый ЗаписьJSON;
			ЗаписьJSON.УстановитьСтроку();
			ЗаписатьJSON(ЗаписьJSON, МассивДобавления);
			ТелоЗапроса = ЗаписьJSON.Закрыть();
			
			Endpoint = СтрШаблон("/rvc/%1/egais/marks/batch", RvcId);
			Заголовки = СформироватьЗаголовки(ИмяПользователя(), CorrelationId);
			
			HTTPОтвет = ОтправитьЗапросAPI("POST", Endpoint, ТелоЗапроса, Заголовки);
			
			Если HTTPОтвет.КодСостояния = 200 Или HTTPОтвет.КодСостояния = 201 Тогда
				
				// Успешно добавлены
				КоличествоДобавлено = Расхождения.НаДобавление.Количество();
				
			Иначе
				
				ТекстОшибки = СтрШаблон("Не удалось добавить марки ЕГАИС пакетом: HTTP %1", HTTPОтвет.КодСостояния);
				Ошибки.Добавить(ТекстОшибки);
				
			КонецЕсли;
			
		КонецЕсли;
		
		// Формирование результата
		Результат.Добавлено = КоличествоДобавлено;
		Результат.Удалено = КоличествоУдалено;
		
		Если Ошибки.Количество() = 0 Тогда
			Результат.Успешно = Истина;
			Результат.Сообщение = "Марки ЕГАИС синхронизированы";
		Иначе
			Результат.Успешно = Ложь;
			Результат.Сообщение = СтрСоединить(Ошибки, "; ");
		КонецЕсли;
		
		// Логирование
		ЗаписатьВИсториюСинхронизации(
			Позиция, 
			"EGAIS_MARKS", 
			?(Результат.Успешно, Перечисления.MRS_СтатусыСинхронизацииSimphony.Выгружено, "Ошибка"), 
			0, 
			СтрШаблон("Марки: добавлено %1, удалено %2. %3", КоличествоДобавлено, КоличествоУдалено, Результат.Сообщение),
			CorrelationId, 
			0
		);
		
	Исключение
		
		ТекстОшибки = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		Результат.Сообщение = "Ошибка синхронизации марок ЕГАИС: " + ТекстОшибки;
		
		ЗаписатьВИсториюСинхронизации(Позиция, "EGAIS_MARKS", "Ошибка", 0, Результат.Сообщение, CorrelationId, 0);
		
	КонецПопытки;
	
	Возврат Результат;
	
КонецФункции

