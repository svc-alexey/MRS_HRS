		СуммаНДС = 0;
		
	КонецЕсли;
	
	СтруктураНДС.Вставить("СтавкаНДС", СтавкаНДС);
	СтруктураНДС.Вставить("СуммаНДС ", СуммаНДС );
	
	Возврат СтруктураНДС;
	
