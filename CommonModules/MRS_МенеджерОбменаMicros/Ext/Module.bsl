			|        AND d.detailtype = 1
			|        AND cc.reopenedtochecknum IS NULL
			|        AND cc.ADDEDTOCHECKNUM IS NULL
			|        AND hs.hierid = 1
			|    GROUP BY d.checkid, TO_CHAR(rc.objectnumber), TRUNC(cc.checkclose)
			|    HAVING SUM(ROUND(d.numerator / d.denominator, 2)) > 0
