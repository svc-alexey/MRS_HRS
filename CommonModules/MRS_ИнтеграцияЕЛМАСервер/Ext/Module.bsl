// Получает ранее сохраненные параметры приказа для документа (адаптировано для вызова с клиента)
// Конвертирует ТаблицуЗначений в Массив структур
//
// Параметры:
//  ДокументСсылка - ДокументСсылка.УстановкаЦенНоменклатуры - документ
//
// Возвращаемое значение:
//  Структура, Неопределено
//
Функция ПолучитьСохраненныеПараметрыПриказаДляКлиента(ДокументСсылка) Экспорт
	
	Параметры = ПолучитьСохраненныеПараметрыПриказа(ДокументСсылка);
	
	Если Параметры = Неопределено Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	// Конвертируем ТЗ в Массив структур для передачи на клиент
	Если Параметры.Свойство("СписокКОзнакомлению") 
		И ТипЗнч(Параметры.СписокКОзнакомлению) = Тип("ТаблицаЗначений") Тогда
		
		МассивСтрок = Новый Массив;
		Для Каждого СтрокаТЗ Из Параметры.СписокКОзнакомлению Цикл
			СтруктураСтроки = Новый Структура("ФизическоеЛицо", СтрокаТЗ.ФизическоеЛицо);
			МассивСтрок.Добавить(СтруктураСтроки);
		КонецЦикла;
		
		Параметры.Вставить("СписокКОзнакомлению", МассивСтрок);
		
	КонецЕсли;
	
	Возврат Параметры;
	
КонецФункции

// Получает ранее сохраненные параметры приказа для документа
// Используется для предзаполнения формы параметров при повторной отправке
//
// Параметры:
//  ДокументСсылка - ДокументСсылка.УстановкаЦенНоменклатуры - документ
//
// Возвращаемое значение:
//  Структура, Неопределено - параметры приказа или Неопределено если не найдено
//   * ОтветственныйЗаИсполнение - СправочникСсылка.ФизическиеЛица
//   * СписокКОзнакомлению - ТаблицаЗначений
//   * ДатаНачалаДействия - Дата
//
Функция ПолучитьСохраненныеПараметрыПриказа(ДокументСсылка) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	|	MRS_ПроцессыELMA.Запрос КАК JSONПараметров
	|ИЗ
	|	РегистрСведений.MRS_ПроцессыELMA КАК MRS_ПроцессыELMA
	|ГДЕ
	|	MRS_ПроцессыELMA.Документ1С = &Документ1С";
	
	Запрос.УстановитьПараметр("Документ1С", ДокументСсылка);
	
	Результат = Запрос.Выполнить();
	
	Если Результат.Пустой() Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Выборка = Результат.Выбрать();
	Выборка.Следующий();
	
	// Параметры приказа сохранены в поле Запрос
	JSONПараметров = Выборка.JSONПараметров;
	
	Если ПустаяСтрока(JSONПараметров) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Попытка
		
		// Парсим параметры из JSON
		ЧтениеJSON = Новый ЧтениеJSON;
		ЧтениеJSON.УстановитьСтроку(JSONПараметров);
		СериализованныеПараметры = ПрочитатьJSON(ЧтениеJSON);
		ЧтениеJSON.Закрыть();
		
		Если ТипЗнч(СериализованныеПараметры) = Тип("Структура") ИЛИ ТипЗнч(СериализованныеПараметры) = Тип("Соответствие") Тогда
			
			// Десериализуем параметры из JSON-формата в объектные типы
			ПараметрыПриказа = ПреобразоватьПараметрыПриказаИзJSON(СериализованныеПараметры);
			Возврат ПараметрыПриказа;
			
		КонецЕсли;
		
	Исключение
		// Ошибка парсинга JSON
		ЗаписатьЛог("Ошибка восстановления параметров приказа из JSON: " + ОписаниеОшибки(), 
			УровеньЖурналаРегистрации.Предупреждение);
		Возврат Неопределено;
	КонецПопытки;
	
	Возврат Неопределено;
	
КонецФункции

