// Возвращает максимальный номер в группе.
//
// Возвращаемое значение:
//	Число - максимальный номер в группе справочника "питМеню".
//
Функция ПолучитьМаксимальныйНомерВГруппе()
	
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	|	ЕСТЬNULL(МАКСИМУМ(Меню.НомерВГруппе), 0) КАК НомерВГруппе
	|ИЗ
	|	Справочник.питМеню КАК Меню
	|ГДЕ
	|	Меню.Родитель = &Родитель
	|	И Меню.Владелец = &Владелец";
	
	Запрос.УстановитьПараметр("Родитель", Объект.Родитель);
	Запрос.УстановитьПараметр("Владелец", Объект.Владелец);
	
	Результат	= Запрос.Выполнить();
	Выборка		= Результат.Выбрать();
	МаксНомер	= 0;
	Если Выборка.Следующий() Тогда
		МаксНомер	= Выборка.НомерВГруппе;
	КонецЕсли;
	Возврат МаксНомер;	
	
КонецФункции

&НаСервере
// Генерирует 10-значный код Simphony
// Первая цифра берется из MRS_КодMajorGroup группы аналитического учета номенклатуры
// Оставшиеся 9 цифр - уникальный порядковый номер
//
// Возвращаемое значение:
//   Число - сгенерированный 10-значный код Simphony
//
Функция СгенерироватьКодSimphony()
	
	КодSimphony = 0;
	
	// Проверяем наличие номенклатуры
	Если НЕ ЗначениеЗаполнено(Объект.Номенклатура) Тогда
		Возврат КодSimphony;
	КонецЕсли;
	
	// Получаем данные о группе аналитического учета номенклатуры
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	Номенклатура.ГруппаАналитическогоУчета.Родитель.MRS_КодMajorGroup КАК КодMajorGroup
		|ИЗ
		|	Справочник.Номенклатура КАК Номенклатура
		|ГДЕ
		|	Номенклатура.Ссылка = &Номенклатура";
	
	Запрос.УстановитьПараметр("Номенклатура", Объект.Номенклатура);
	
	Результат = Запрос.Выполнить();
	Выборка = Результат.Выбрать();
	
	Если НЕ Выборка.Следующий() Тогда
		Возврат КодSimphony;
	КонецЕсли;
	
	// Проверяем, заполнен ли код MajorGroup
	Если НЕ ЗначениеЗаполнено(Выборка.КодMajorGroup) Тогда
		Возврат КодSimphony;
	КонецЕсли;
	
	// Получаем первую цифру из кода MajorGroup
	СтрокаКодMajorGroup = Формат(Выборка.КодMajorGroup, "ЧГ=0");
	ПерваяЦифра = Число(Лев(9, 1));
	ПерваяЦифра = Число(Лев(СтрокаКодMajorGroup, 2));
	
	// Находим максимальный существующий код Simphony, начинающийся с этой цифры
	ЗапросМаксКод = Новый Запрос;
	ЗапросМаксКод.Текст = 
		"ВЫБРАТЬ
		|	ЕСТЬNULL(МАКСИМУМ(питМеню.MRS_КодSimphony), 0) КАК МаксКод
		|ИЗ
		|	Справочник.питМеню КАК питМеню
		|ГДЕ
		|	питМеню.MRS_КодSimphony >= &МинГраница
		|	И питМеню.MRS_КодSimphony < &МаксГраница";
	
	// Определяем границы диапазона для кодов, начинающихся с этой цифры
	МинГраница = ПерваяЦифра * 900000000; // Умножаем на 10^9
	МаксГраница = (ПерваяЦифра + 1) * 900000000;
	
	ЗапросМаксКод.УстановитьПараметр("МинГраница", МинГраница);
	ЗапросМаксКод.УстановитьПараметр("МаксГраница", МаксГраница);
	
	РезультатМаксКод = ЗапросМаксКод.Выполнить();
	ВыборкаМаксКод = РезультатМаксКод.Выбрать();
	
	Если ВыборкаМаксКод.Следующий() Тогда
		
		Если ВыборкаМаксКод.МаксКод = 0 Тогда
			// Это первый код с такой начальной цифрой
			КодSimphony = МинГраница + 1;
		Иначе
			// Увеличиваем максимальный код на 1
			КодSimphony = ВыборкаМаксКод.МаксКод + 1;
		КонецЕсли;
		
	Иначе
		// Ошибка выполнения запроса
		КодSimphony = МинГраница + 1;
	КонецЕсли;
	
	Возврат КодSimphony;
	
КонецФункции

